/**index.wxss**/

.userinfo{
  margin-top: 40rpx;
  height: 240rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo {
  padding-left: 120rpx;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 200rpx;
}

.userinfo-avatar:after {
  border: none;
}
.userinfo-nickname-wrapper {
  flex: 1;
  margin-left: 20rpx;
  font-size: large;
}

.userinfo-modify-list {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  padding: 40rpx 20rpx;
}
.list-icon{
  margin-right: 20rpx;
}
.userinfo-modify {
  box-sizing:border-box;
  width: 100%;
  padding:0rpx 20rpx;
}

.input-item{
  border-bottom: 1px solid rgb(0, 0, 0, 0.1);
}
.input-title{
  padding:40rpx 0;
}
input{
  padding-bottom: 10rpx;
}
.input-radio{
  padding-bottom: 20rpx;
}
radio-group{
  display: flex;
}
.radio-name{
  margin-right: 20rpx;
}

.button-btm{
 display: flex;
 justify-content: space-between;
 padding: 80rpx 0;
}
.button-btm button{
  color: #fff;
  width:240rpx !important;
}
button.cancel-button{
  background-color: #c9c9c9;
}
